.total-article-container {
	width: 100%;
	border-top: solid thin;
	margin-bottom: 50px;
	overflow: auto;
}

.index-search {
	font-family: 'Titillium Web', sans-serif;
	font-size: 1.3em;
	position: relative;
	margin-left: auto;
	margin-right: auto;
	-webkit-transition: outline 0.2s;
	-moz-transition: 	outline 0.2s;
	transition: 		outline 0.2s;
}

.article-detail-container {
	width: 100%;
}

.article-detail-title span {
	font-size: 2em;
}

.article-detail-content p {
	color: black !important;
}

#article-detail-img {
	float: left;
	margin-right: 10px;
	margin-bottom: 10px;
}

.article-detail-container a {
	text-decoration: underline;
	color: blue;
}

.article-return {
	width: 340px;
	height: 100px;
	border-top: solid;
	float: right;
	font-size: 2em;
	text-indent: 50px;
	-webkit-transition: border-top-color 0.3s;
	-moz-transition: 	border-top-color 0.3s;
	transition: 		border-top-color 0.3s;
}

.article-return:hover {
	border-top-color: #204b9a;
}

/*Articles index*/

.article-index-container {
	width: 960px;
	margin-left: auto;
	margin-right: auto;
}

.article-search-container {
	width: 600px;
	margin-left: auto;
	margin-right: auto;
	margin-bottom: 70px;
}

.search-title {
	border-bottom: solid thin;
}

.article-search-box {
}

.article-search-box input {
	display: inline;
}

.article-index {
	list-style: none;
}

.article-container {
	width: 100%;
	border-left: solid;
	margin-bottom: 20px;
	padding: 5px;
}

.article-photo {
	float: left;
	width: 150px;
	height: 100px;
	overflow: hidden;
	text-align: center;
}

.article-photo img { 
}

.article-container span {
	margin-left: 10px;
}

.article-title {
	font-size: 1.4em;
}


/*pagination*/

.pagination {
	margin: 10px;
}

.pagination a {
	font-family: 'Titillium Web', sans-serif;
	border: solid thin;
	padding: 5px;
	color: #204b9a;
}

.pagination span {
	font-family: 'Titillium Web', sans-serif;
	border: solid thin;
	padding: 5px;
	color: #204b9a;
}

.current {
	font-family: 'Titillium Web', sans-serif;
	font-style: normal;
	border: solid thin;
	padding: 5px;
	font-size: 1.3em;
	color: #204b9a;
}

span.disabled {
	color: #777777;
}

.page-info {
	width: 300px;
	padding: 10px;
	border: solid thin #204b9a;
	margin-left: auto;
	margin-right: auto;
}

@media all and (min-width: 790px) and (max-width: 959px) {

	.article-index-container{
		width: 790px;
	}
}

@media all and (min-width: 550px) and (max-width: 789px) {

	.article-index-container{
		width: 550px;
	}
}

@media all and (max-width: 549px) {

	.article-index-container {
		width: 100%;
		margin-top: 60px;
	}

	.page-info {
		width: 100%;
		text-align: center;
		border-left: none;
	}

	.article-index {
		padding-left: 0;
	}

	.article-container {
		width: 100%;
		border-top: solid thin;
		border-bottom: solid thin;
		border-left: none;
		overflow: auto;
		height: auto;
	}

	.article-inner-container {
		width: 90%;
		overflow: auto;
	}

	.total-article-container{
		width: 90%;
		margin-top: 70px;
		margin-left: auto;
		margin-right: auto;
	}

	.video-embed {
		overflow: hidden;
	}

	.article-short-description {
		display: none;
	}

	.article-title {
		font-size: 1.2em;
	}
}
