html, body {
	margin: 0;
	padding: 0;
}

#admin_header {
	width: 100%;
	height: 60px;
	background-color: black;
	position: fixed;
	z-index: 100;
	box-shadow: 0 0 5px 5px black;
}

#admin_header h4 {
	line-height: 60px;
}

.admin-content {
	margin-top: 100px;
}


.admin-signout {
	color: white;
	font-family: 'Signika', sans-serif;
	font-size: 1.2em;
	list-style: none;
}

.admin-signout li {
	display: inline-block;
	margin-left: 7px;
	border-left: solid thin white;
	padding-left: 7px;
	height: 60px;
	vertical-align: top;
}

#admin-login {
	width: 400px;
	margin-left: auto;
	margin-right: auto;
	margin-top: 50px;
}

#admin-login label,input {
	display: block;
	margin-left: auto;
	margin-right: auto;
}

#admin-login label {
	text-align: center;
	font-family: 'Signika', sans-serif
}

#content-post {
	display: none;
}

.admin-table {
	margin-left: auto;
	margin-right: auto;
	border-collapse: collapse;
	width: 100%;
}

.admin-table th {
	border-bottom: 3px solid;
	padding: 10px;
	font-family: 'Signika', sans-serif;
	font-size: 1.5em;
}

.first-col {
	text-align: left;
}

.admin-table td {
	padding: 10px;
	font-size: 1em;
	text-align: center;
	border-bottom: solid 1px;
}

.admin-table tr:nth-child(even) {
	background-color: rgb(220, 220, 220);
}

.admin-table td:first-child {
	text-align: left;
}

.admin-edit {
	color: blue;
	text-decoration: underline;
}

.admin-article:hover {
	background-color: rgba(37,25,202,0.2) !important;
}

.alert {
	width: 90%;
	padding: 10px;
	font-size: 1.5em;
	font-family: sans-serif;
	margin-left: auto;
	margin-right: auto;
}

.alert-success {
	background-color: green;
	color: white;
}

#new-article-form label {
	text-align: center;
}
