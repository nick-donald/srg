html, body {
	margin: 0;
	padding: 0;
}

.user-html {
}

#admin_header {
	width: 100%;
	height: 60px;
	background-color: black;
	position: fixed;
	z-index: 100;
}

#admin_header h4 {
	/*line-height: 60px;*/
}

.admin-content {
	margin-top: 100px;
}


.admin-signout {
	color: white;
	font-family: 'Signika', sans-serif;
	font-size: 1.2em;
	list-style: none;
	margin-top: 0;
	line-height: 60px;
}

.admin-signout li {
	display: inline-block;
	margin-left: 0;
	margin-right: -4px;
	border-left: solid thin white;
	padding-left: 7px;
	padding-right: 7px;
	height: 60px;
}

.admin-signout li:last-child {
	border-right: solid thin white;
	padding-right: 7px;
}

.admin-signout li:hover {
	background-color: white;
	color: black;
}

#admin-login {
	width: 400px;
	margin-left: auto;
	margin-right: auto;
	margin-top: 50px;
}

#admin-login label,input {
	display: block;
	margin-left: auto;
	margin-right: auto;
}

#admin-login label {
	text-align: center;
	font-family: 'Signika', sans-serif
}

.content-post {
	display: none;
	width: 90%;
	margin-left: auto;
	margin-right: auto;
	text-align: center;
	border: solid thin;
	margin-bottom: 20px;
}

.form-title {
	font-size: 1.3em;
	font-weight: 600;
	text-decoration: underline;
}

.article-type {
	margin-bottom: 20px;
}

.article-type input {
	display: inline;
}

.article-form-input {
	margin-bottom: 20px;
	font-family: sans-serif;
}

.wide-form {
	width: 500px;
}

.admin-dashboard {
	border-top: solid thin;
	padding-top: 40px;
}

.admin-table {
	margin-left: auto;
	margin-right: auto;
	border-collapse: collapse;
	width: 100%;
}

.admin-table th {
	border-bottom: 3px solid;
	padding: 10px;
	font-family: 'Signika', sans-serif;
	font-size: 1.5em;
}

.first-col {
	text-align: left;
}

.admin-table td {
	padding: 10px;
	font-size: 1em;
	text-align: center;
	border-bottom: solid 1px;
}

.admin-article-title:hover {
	text-decoration: underline;
}

.btn {
	width: 100px;
	font-size: 1.3em;
}

.admin-table tr:nth-child(even) {
	background-color: rgb(220, 220, 220);
}

.admin-table td:first-child {
	text-align: left;
}

.admin-edit {
	color: blue;
	text-decoration: underline;
}

.admin-article:hover {
	background-color: rgba(37,25,202,0.2) !important;
}

.alert {
	width: 90%;
	padding: 10px;
	font-size: 1.5em;
	font-family: sans-serif;
	margin-left: auto;
	margin-right: auto;
}

.alert-success {
	background-color: green;
	color: white;
}

#new-article-form label {
	text-align: center;
}

.btn {
	margin-top: 30px;
}

/*Select input type*/

#admin-type-select {
	width: 100%;
	height: 60px;
	margin-top: 20px;
}

#admin-type-select ul {
	list-style: none;
	padding-left: 0;
	text-align: center;
}

#admin-type-select li {
	display: inline-block;
	margin-left: 20px;
}

.admin-select-button {
	width: 25%;
	height: 60px;
	font-size: 1.5em;
	line-height: 60px;
	background-color: #333333;
	color: white;
	text-align: center;
}

#admin-type-select div:first-child {
	margin-left: 40px;
}

.bios-select {
	margin-right: 40px;
}

.selected-admin-input {
	background-color: white;
	color: black;
	border-top: solid thin;
	border-left: solid thin;
	border-right: solid thin;
}

.videos-dashboard, .bios-dashboard {
	display: none;
}

.content-edit {
	margin-top: 80px;
}