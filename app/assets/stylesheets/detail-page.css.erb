.consulting-detail-page {
	width: 100%;
	height: 800px;
}

.supermarket-detail-page {
	width: 100%;
	height: 500px;
}

.side-nav-container {
    position: relative;
    float: left;
    width: 23%;
    height: 300px;
    border-top: solid thin black;
    top: 36px;
}

.main-content-container {
	overflow: hidden;
}

.side-nav {
	list-style: none;
	padding-left: 0;
}

.side-nav li {
	width: 95%;
	border-left: solid thin black;
	padding: 8px;
	margin-top: 10px;
}

.side-nav a {
	font-family: 'Signika', sans-serif;
	font-size: 1.6em;
}

.side-nav li:hover {
		border-right: solid thin black;
		background-color: rgba(0,0,0,0.2);
}

.selected-side-nav {
	border-left: solid thick black !important;
}

.detail-content {
	width: 75%;
	float: right;
	position: relative;
}

.left-align {
	text-align: left !important;
	text-indent: 10px;
}

.detail-text-container {
	width: 100%;
	margin-top: 20px;
	border-top: solid thin;
	height: auto;
}

.detail-text {
	position: relative;
	width: 900px;
	margin-left: auto;
	margin-right: auto;
}

.detail-ul li {
	list-style: none;
	border-left: solid thin;
	margin-top: 8px;
	padding-left: 8px;
}

.detail-text span {
	font-family: helvetica, sans-serif;
}

.detail-text p, .section-detail-text p {
	color: black !important;
}

.section-detail-text li {
	list-style-type: none;
	border-left: solid thin;
	margin-top: 8px;
	padding-left: 8px;
}

.section-detail-text span {
	font-family: helvetica, sans-serif;
}

.areas-select-box {
	width: 960px;
	margin-top: 20px;
	text-align: center;
	margin-left: auto;
	margin-right: auto;
}

.areas-select-link {
	width: 30%;
	height: 400px;
	display: inline-block;
	margin-right: 10px;
	vertical-align: top;
	background-size: cover;
}

.areas-select-link-square {
	width: 45%;
	height: 300px;
	display: inline-block;
	vertical-align: top;
	background-size: cover;
	margin-top: 10px;
	margin-left: 10px;
}

.areas-select-box div:last-child {
	margin-right: 0;
}

.detail-caption {
	position: relative;
	height: 200px;
	top: 200px;
}

.detail-caption-title {
	height: 60px;
	background-color: rgba(0,0,0,0.5);
	line-height: 60px;
	-webkit-transition: background-color 0.3s;
	-moz-transition: 	background-color 0.3s;
	-ms-transition: 	background-color 0.3s;
	transition: 		background-color 0.3s;
}

.detail-caption-title:hover {
	background-color: rgba(120,120,240,0.5);
}

.detail-caption-description {
	height: 80px;
	background-color: rgba(0,0,0,0.5);
	opacity: 0;
}

.detail-caption span {
	color: white;
	font-size: 2em;
}

.detail-caption p {
	color: white !important;
	line-height: 25px;
	text-align: left;
	padding-left: 5px;
}

#detail-news-container {
	width: 100%;
	height: 400px;
}

#detail-news {
	width: 960px;
	height: 300px;
	margin-left: auto;
	margin-right: auto;
	text-align: center;
	margin-top: 20px;
}

.detail-article {
	width: 30%;
	height: 100%;
	display: inline-block;
	border: solid thin #00008B;
	margin-right: 10px;
	-webkit-border-radius: 5px;
	-moz-border-radius:    5px;
	border-radius: 		   5px;
}

#detail-news div:last-child {
	margin-right: 0;
}

/*individual pages*/

.section-detail-text {
	width: 100%;
}

/* bios page */

.bios {
	border: none;
}

.bios-side-nav {
	font-size: 0.7em;
	position: fixed;
	border-top: solid thin;
	padding-top: 10px;
	top: 128px;
}

.bios-side-nav li {
	padding: 4px;
}

.bio-title {
	font-size: 1.5em;
}

.bio {
	border-bottom: solid thin;
	margin-top: 20px;
}

.bio-content {
	padding-left: 15px;
}

.bio-content p {
	line-height: 120%;
}

.bio-content p, .bio-content span {
	font-family: sans-serif;
}

.section-detail-text .bio:last-child {
	margin-bottom: 20px;
	border-bottom: none;
}

@media all and (min-width: 790px) and (max-width: 959px) {
	.detail-text {
		width: 790px;
	}

	.areas-select-box {
		width: 790px;
	}

	.two-box {
		width: 960px !important;
	}

	#detail-news {
		width: 790px;
	}
}

@media all and (min-width: 550px) and (max-width: 789px) {

	.consulting-detail-page {
		height: 1400px;
	}

	.wrapper {
		width: 550px !important;
	}

	.detail-text {
		width: 550px;
	}

	.areas-select-box {
		width: 550px;
	}

	.areas-select-link {
		display: block;
		width: 100%;
		margin-top: 20px;
	}

	.side-nav a {
		font-size: 1em;
	}

	#detail-news-container {
		height: 600px;
	}

	#detail-news {
		width: 550px;
	}

	.detail-article {
		display: block;
		width: 95%;
		height: 30%;
		margin-left: auto;
		margin-right: auto !important;
		margin-top: 10px;
	}

	.large-title span {
		font-size: 1.5em;
	}

}

@media all and (max-width: 549px) {

	.consulting-detail-page {
		margin-top: 70px;
		height: 1500px;
	}

	.supermarket-detail-page {
		margin-top: 70px;
	}

	.wrapper {
		width: 100% !important;
	}

	.side-nav li {
		border: solid thin #00008B;
	}

	.detail-text {
		width: 95%;
	}

	.areas-select-box {
		width: 95%;
	}

	.areas-select-link, .areas-select-link-square {
		display: block;
		width: 100%;
		margin-top: 20px;
	}

	#detail-news-container {
		height: 900px;
		margin-top: 400px;
	}

	#detail-news {
		width: 100%;
	}

	.detail-article {
		display: block;
		width: 95%;
		height: 30%;
		margin-left: auto;
		margin-right: auto !important;
		margin-top: 10px;
	}

	.side-nav-container {
		float: none;
		width: 95%;
		margin-left: auto;
		margin-right: auto;
	}

	.detail-content {
		float: none;
		width: 95%;
		margin-left: auto;
		margin-right: auto;
	}

	.bios {
		display: none;
		z-index: 1000;
	}

	.bio-container {
		margin-top: 60px;
	}

}