html, body {
    margin: 0;
    padding: 0;
    z-index: -2;
    overflow-x: hidden;
}

span {
    font-family: 'Titillium Web', sans-serif;
}

h1 {
    font-weight: normal;
    font-family: 'Signika', sans-serif;
    color: white;
}

p {
    font-family: helvetica;
}

a {
    text-decoration: none;
    color: inherit;
}

.wrapper {
    position: relative;
    /*height: 100%;*/
    width: 960px;
    margin-left: auto;
    margin-right: auto;
    background-color: white;
}

.page {
    width: 100%;
    z-index: 1000;
    background-color: white;
}

#header {
    width: 100%;
    height: 100px;
}

.container {
    width: 90%;
    margin-left: auto;
    margin-right: auto;
}

.inner-container {
    width: 960px;
    margin-left: auto;
    margin-right: auto;
}

#logo {
    position: relative;
    padding: 0;
    height: 50px;
    width: 100%;
    background-color: rgb(0, 0, 0);
}

.logo-text span {
    font-size: 30px;
    color: white;
}

.logo-text {
    float: left;
    position: relative;
    width: 400px;
}

#desktop-search {
    clear: both;
    float: right;
    width: 300px;
    vertical-align: top;
    margin-top: -40px;
}

.big-search {
    height: 35px;
    width: 300px;
    vertical-align: top;
    background-color: rgb(50,50,50);
    border: none;
    color: white;
    font-size: 1.1em;
    outline: none;
    text-indent: 5px;
    -webkit-transition: background-color 0.2s;
    -moz-transition:    background-color 0.2s;
    transition:         background-color 0.2s;
}

.big-search:focus {
    background-color: rgb(100,100,100);
}

#desktop-search-icon {
    float: right;
    width: 30px;
    height: 30px;
    background-image: url(search_icon.png);
    border: solid white;
    clear: both;
}

#mobile-search {
    display: none;
}

.mobile-button {
    display: none;
}

#mobile-dropdown {
    display: none;
    position: relative;
    width: 100%;
    height: 400px;
    z-index: 1000;
    margin-top: -15px;
    background: none;
}

#mobile-buttons {
    padding-left: 0;
}


#mobile-buttons li {
    list-style: none;
    padding: 5px 0;
    width: 100%;
    text-align: left;
    margin-left: 0;
    margin-top: 4px;
    /*border-bottom: solid thin white;*/
    text-indent: 8px;
    background-color: rgba(0,0,0,0.5);
    
}

#mobile-buttons li:hover {
}

#mobile-buttons a {
    text-decoration: none;
    color: white;
    font-size: 24px;
    font-family: 'Signika', sans-serif;
}

#buttons-container {
    position: relative;
    width: 100%;
    text-align: center;
    background-color: #204b9a;
    z-index: 2000;
    height: 30px;
    margin-top: -5px;
}

#location-selector {
    display: none;
}

#selection-window {
    width: 510px;
    height: 30px;
    border: solid;
}

.mainnav {
    position: relative;
    list-style: none;
    margin: 5px;
    height: 100%;
    width: 960px;
    margin-left: auto;
    margin-right: auto;
    text-align: center;
}

.mainnav li {
    position: relative;
    display: inline;
    background-color: #204b9a;
    cursor: pointer;
    margin-left: 5px;
    margin-right: -6px;
    border-left: solid thin white;
    height: 30px;
    padding-left: 10px;
    padding-right: 5px;
    padding-bottom: 0;
    padding-top: 3px;
    line-height: 30px;
    border-top: solid 3px #204b9a;
    -webkit-transition: border-top-color 0.2s;
    -moz-transition:    border-top-color 0.2s;
    -ms-transition:     border-top-color 0.2s;
    transition:         border-top-color 0.2s;
}

.mainnav li:first-child {
    border: none;
    padding-left: 0;
    margin-left: 0;
}

.subnav-div {
    display: none;
    position: absolute;
    width: 200px;
    height: 150px;
    z-index: 70;
    left: 0;
    top: 20px;
}

.nav-description span {
    line-height: normal;
    font-size: 1em;
}

.subnav-container {
    position: relative;
    margin-left: auto;
    margin-right: auto;
    background-color: #204b9a;
    margin-top: 12px;
    padding: 7px;
    border: solid thin white;
}

.info-buttons {
    position: relative;
    display: inline-block;
    width: 100%;
    vertical-align: top;
    margin-top: 8px;
}

.info-buttons:hover {
}


.nav-title {
    font-size: 1em;
    width: 90%;
    margin-left: auto;
    margin-right: auto;
    text-align:left;
    border-top: solid thin white;
    padding: 4px;
    -webkit-transition: background-color 0.2s;
    -moz-transition:    background-color 0.2s;
    transition:         background-color 0.2s;
    -webkit-transition: border-top-color 0.2s;
    -moz-transition:    border-top-color 0.2s;
    transition:         border-top-color 0.2s;
}

.nav-title:hover {
    border-top-color: black;
    background-color: rgba(0,0,0,0.2);
}

.mainnav li:hover {
    border-top-color: white;
}

#buttons-container span {
    color: white;
}

