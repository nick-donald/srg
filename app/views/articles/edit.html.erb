<%= form_for(@article, :html => { :multipart => true }) do |f| %>
	<%= f.label :title %>
	<%= f.text_field :title, maxlength: 80 %>

	<%= f.label :Article_Type %>
	<%= f.radio_button(:article_type, "SRG News") %> SRG News <br />
	<%= f.radio_button(:article_type, "Industry News") %> Industry News

	<%= f.label :author %>
	<%= f.text_field :author %>

	<%= f.label :date %>
	<%= f.date_select :date %>

	<%= f.label :short_description %>
	<%= f.text_field :short_description %>

	<%= f.label :Publication_Name %>
	<%= f.text_field :publication_name %>

	<%= f.label :Publication_Link %>
	<%= f.text_field :publication_link %>

	<%= f.label :content %>
	<%= f.cktext_area :content, :ckeditor => {:language => "usa"} %>

	<div class="article-form-input">
		<%= f.label :seo_title, class: "form-title" %>
		<%= f.cktext_area :seo_title %>
	</div>

	<div class="article-form-input">
		<%= f.label :seo_title, class: "form-title" %>
		<%= f.cktext_area :seo_description %>
	</div>

	<div class="article-form-input">
		<%= f.label :seo_title, class: "form-title" %>
		<%= f.cktext_area :seo_keywords %>
	</div>

	<%= f.label :Upload_Photo %>
	<%= f.file_field :photo %>

	<%= f.label :enabled_?, class: "form-title" %>
	<%= f.check_box :enabled, {}, true, false %>

	<%= f.submit "Save Changes" %>
<% end %>