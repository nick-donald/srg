<%= form_for(@bio) do |f| %>
	<%= f.label :name %>
	<%= f.text_field :name %>

	<% array = Array.new %>
	<% for i in 1..@bios.count + 1 %>
		<% array << i %>
	<% end %>

	<%= f.label :bio_order, "Bio Order" %>
	<%= f.select(:bio_order, options_for_select(array.map)) %>
	<br />

	<%= f.label :content %>
	<%= f.cktext_area :content %>

	<%= f.submit "Post" %>
<% end %>