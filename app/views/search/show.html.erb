<div class="article-index-container">
	<div class="article-search-container">
		<div class="search-title"><span>Search all</span></div>
		<div class="article-search-box">
			<%= form_tag search_path(:search), :method => :get do %>
				<span><%= label_tag :keywords %>: </span>
				<%= text_field_tag :search, params[:search] %>
				<%= submit_tag "Search", name: nil %>
			<% end %>
		</div>
	</div>

	<%= will_paginate @results %>

	<ul class="article-index">

	<% @results.each do |result| %>

		<li>
			<div class="article-container">
				<div class="article-photo">
				<a href="/articles/<%= result.id %>"><%= image_tag(result.photo.url, height: 100) %></a>
				</div>
				<span class="article-title"><%= link_to result.title, result %></span> <br />
				<span><%= result.date.strftime("%b %d, %Y") %> | <%= result.class.name %></span> <br />
				<% if result.class.name == "Article" %>
					<div class="article-short-description"><span><%= truncate(result.short_description, length: 105, separator: " ") %></span></div>
				<% else %>
					<div class="article-short-description"><span><%= truncate(result.description, length: 105, separator: " ") %></span></div>
				<% end %>
			</div>
		</li>
	<% end %>

	</ul>
</div>
