<%= provide(:title, @video.title) %>
<%= provide(:meta_description, @video.seo_description) %>
<%= provide(:meta_keywords, @video.seo_keywords) %>

<div class="total-article-container">
	<div class="wrapper">

		<div class="article-detail-container">
			<div class="article-detail-title">
				<span><%= sanitize @video.title %></span>
			</div>
			<div class="article-detail-author">
				<span> As seen on <%= link_to @video.publication, @video.publication_link, class: "article-external-link" %></span>
				<br />
				<span><%= @video.date.strftime("%B %d, %Y") %></span>
			</div>
			<div class="article-detail-content">
				<div class="video-embed">
					<%= raw @video.embed_link %>
				</div> <br />
				<span><%= sanitize @video.description %></span>
			</div>
		</div>
	</div>
	<div class="article-return">
		<a href="/videos"><span> << Return to videos</span></a>
	</div>
</div>